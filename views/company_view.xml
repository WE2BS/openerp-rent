<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
            Simple add a field to configure the company rent unity.
        -->
        <record id="rent_company_form_view" model="ir.ui.view">
            <field name="name">rent.company.form.view</field>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                    <field name="currency_id" position="after">
                        <field name="rent_unity" colspan ="4"/>
                    </field>
            </field>
        </record>
    </data>
</openerp>
